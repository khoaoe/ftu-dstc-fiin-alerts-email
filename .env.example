# Email routing
ALERT_TO=you@example.com,teammate@example.com
ALERT_FROM=me
SUBJECT_PREFIX=[FTU-DSTC Alerts]

# Data sources
DATA_PARQUET_PATH=./data/data-v2.parquet # Fallback if FiinQuant unavailable
FQ_USERNAME=
FQ_PASSWORD=

# Run scheduling
RUN_MODE=BOTH  # INTRADAY|EOD|BOTH
INTRADAY_BY=15m  # 1m|5m|15m
INTRADAY_LOOKBACK_MIN=45
TICKERS=HPG,SSI,VCB,VNM

# Retry configuration
HTTP_MAX_RETRY=5

# Timezone
TIMEZONE=Asia/Ho_Chi_Minh

# SMTP notify settings (Email-only via SMTP. Không cần OAuth. Dùng App Password nếu Gmail/Workspace.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURITY=SSL
SMTP_USER=you@yourdomain.com
SMTP_PASS=app_password_or_smtp_password
MAIL_TO=team@domain.com,leader@domain.com
ALERT_DB_PATH=alerts.db
ENV_NAME=prod
SMTP_TIMEOUT=30
